<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:id="@+id/ll_order_head"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dianpu"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本家自营"
            android:textSize="18sp"
            android:textColor="#000"
            />

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:id="@+id/ll_order_middel"
        android:layout_below="@+id/ll_order_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单id:"
            />
       <!-- <TextView
            android:id="@+id/orderid"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999999999999999"
            />-->
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999999999"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textColor="@color/shape_ring_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="¥:"
                />
            <TextView
                android:id="@+id/tv_order_price"
                android:textSize="20sp"
                android:textColor="@color/shape_ring_select"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="254"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_order_middel"

        >
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:textColor="@color/black"
            android:paddingLeft="10dp"

            />



    </LinearLayout>

<LinearLayout
    android:layout_below="@+id/ll_order_middel"
    android:padding="5dp"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_marginRight="10dp"
        android:background="@drawable/order_rcef_bg"
        android:textColor="@color/shape_ring_select"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/btn_quxiao"
        android:text="取消购买"
        />
    <Button
        android:background="@drawable/order_rcef_bg"
        android:textColor="@color/shape_ring_select"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/btn_buy"
        android:text="立即购买"
        />
</LinearLayout>
    <ImageView
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_over"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/over"
        />



</RelativeLayout>